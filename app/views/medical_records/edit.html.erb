<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class = "form-style">
        <%= simple_form_for(@medical_record) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :blood %>
          <%= f.input :allergies %>
        </div>
      </div>
      <div class="form-actions form-action-style">
        <%= f.button :submit, "Enviar", class: ' btn-submit btn-coral' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
