<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-10">
      <div class = "form-style">
        <%= simple_form_for(@medical_record) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :blood, as: :wysihtml5, wysihtml5: { toolbar:{"fa": true}, locale: "pt-BR" } %>
          <%= f.input :allergies %>
        </div>
      </div>
      <div class="form-actions form-action-style">
        <%= f.button :submit, "Enviar", class: ' btn-submit btn-coral' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
