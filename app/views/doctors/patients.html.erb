<div class="container">
  <div class="row d-flex justify-content-between">
    <div class="shadow-sm p-3 mb-5 rounded col-xs-12 col-md-5 patient-box">
      <h2>Meus Pacientes</h2>
      <% @patients.sort_by!{|patient| patient.first_name} %>
      <% @patients.uniq! %>
      <% @patients.each do |patient| %>
        <%= link_to medical_record_path(patient) do %>
          <p><%= patient.first_name %> <%= patient.last_name %></p>
        <% end %>
      <% end %>
    </div>
    <div class="shadow-sm p-3 mb-5 rounded col-xs-12 col-md-6  patient-box ">
      <h2>Pr√≥ximas Consultas</h2>
      <% @consultations = @consultations.order("start_time ASC") %>
      <% @consultations.each do |consultation| %>
        <% if consultation.start_time > Time.now %>
        <% date = consultation.start_time %>
          <p><%= consultation.patient.first_name %> <%= date.strftime("%A") %> <%= date.time %> </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
