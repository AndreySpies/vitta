<div class = "global">
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <div class= "cards-list">
        <% @doctors.each do |doctor| %>
          <%= link_to doctor do %>
            <div class = "doctor-information">
              <div class = "doctor-avatar">
                <%= cl_image_tag (doctor.user.profile_picture), class:"avatar-larger" %>
              </div>

              <div class="doctor-info-box">
                <div class = "doctor-name">
                  <h1>
                    Dr. <%= doctor.user.first_name %> <%= doctor.user.last_name %>
                  </h1>
                </div>
                <div class ="doctor-specialty">
                  <p>
                   <% doctor.specialties.each do |specialty|%>
                    <%= specialty.name %>
                   <% end %>
                 </p>
                </div>

              </div>
              <div class="icons">
                  <!-- <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i> -->
                  <p><strong>8.5 (45 avaliações)</strong><br>
                  $$$</p>
                </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div id="map-box" class="col-md-6">
      <div id="map"
      style="width: 100%; height: calc(100vh - 104px);"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>
  </div>
</div>
</div>
