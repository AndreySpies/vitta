<!-- Ver app/assets/stylesheets/pages/_sign_in-->

<div class="container-form-sign-in">
  <div class = destaque>
    <p>Precisamos de sua conta para marcar consultas, ver horarios dispon√≠veis, verificar agendamentos...</p>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3">
      <div class = "container-texto">
        <div class = titulo>
          <!-- <h2>Log in</h2> -->
          <!-- <p class="detalhe-maior"></p> -->
        </div>
      </div>

      <div class = "container-out-form">
        <div class = "form-style">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
            required: false,
            autofocus: true,
            input_html: { autocomplete: "email" } %>
            <%= f.input :password,
            required: false,
            input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>
      </div>
      <div class="form-actions style">
        <%= f.button :submit, "Entrar", class: ' btn-submit btn-coral' %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
